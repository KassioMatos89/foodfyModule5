{% extends "layout.njk" %}

    {% block content %}
            <section class="best-menu-main">
                <div class="best-menu">
                    <h1>{{ homeInf.title }}</h1>
                    <p>{{ homeInf.description }}</p>
                    <img src="assets/chef.png" alt="Chef">
                </div>
            </section>
            
            <h1 class="most-accessed-title">{{ homeInf.cardsTitle }}</h1>
            
            <section class="cards">

            {% for recipe in recipes %}
                <div id="{{ recipe.id }}" class="card">
                    <div class="card__image-container">
                        <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
                    </div>
                    <div class="card_content">
                        <div class="card__title">
                            <p class="title">{{ recipe.title }}</p>
                        </div>
                        <div class="card__author">
                            <p class="author">por {{ recipe.chef_name }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
            
            </section>
    {% endblock %}
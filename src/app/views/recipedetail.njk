{% extends "layout.njk" %}
    {% block content %}

            <section id="meal" class="cards-detail">
                <div class="card-detail">
                    <div class="card-detail-head">
                        <div class="card__image-container-detail">
                            <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
                        </div>
                        <div class="card__title-detail">
                            <h1>{{ recipe.title }}</h1>
                        </div>
                        <div class="card__author-detail">
                            <h2>por {{ recipe.author }}</p>
                        </div>
                    </div>

                    <div class="card-detail-content">
                        <div class="ingredients">
                            <h3>Ingredientes</h3>
                            <h4>ESCONDER</h4>
                            <div class="topic-content">
                                <ul class="hidden">
                                    {% for ingredient in recipe.ingredients %}
                                        <li>{{ ingredient }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        <div class="preparation">
                            <h3>Modo de preparo</h3>
                            <h4>ESCONDER</h4>
                            <div class="topic-content">
                                <ul class="hidden">
                                    {% for preparation in recipe.preparation %}
                                        <li>{{ preparation }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        <div class="information">
                            <h3>Informações adicionais</h3>
                            <h4>ESCONDER</h4>
                            <div class="topic-content">
                                <p class="hidden">{{ recipe.information }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
    {% endblock %}